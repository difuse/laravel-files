{
    "name": "helori/laravel-files",
    "description": "Utilities to manipulate images and PDF files",
    "keywords": ["helori", "image", "pdf", "convert", "compress", "zip", "optimize", "combine"],
    "license": "MIT",
    "homepage": "https://github.com/helori/laravel-files",
    "authors": [
        {
            "name": "Helori Lanos",
            "email": "helori@algoart.fr",
            "homepage": "https://algoart.fr"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/helori/laravel-files.git"
        }
    ],
    "require": {
        "php" : "^7.0",
        "ext-imagick" : "*",
        "setasign/fpdf": "^1.8",
        "setasign/fpdi": "^2.0",
        "intervention/image": "2.*",
        "symfony/process": "5.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0"
    },
    "autoload": {
        "psr-4": {
            "Helori\\LaravelFiles\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Helori\\LaravelFiles\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
